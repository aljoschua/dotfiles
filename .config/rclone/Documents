# vim:ft=sh
start() {
    exec rclone mount mega-doc-cache: ~/Documents \
    --use-mmap --dir-cache-time 1000h --fs-cache-expire-duration 72h \
    --vfs-cache-mode full --tpslimit 10 \
    --buffer-size 16M --vfs-read-chunk-size 100M
}

stop() {
    fusermount -u ~/Documents
}

reload() {
    pkill -HUP -u $USER -fo 'rclone mount mega-doc-cache:'
}

