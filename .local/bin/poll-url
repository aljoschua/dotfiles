#!/bin/bash
# SPDX-License-Identifier: GPL-3.0-or-later

set -eu

url="$1"
cookie="$2"
filter="$3"
time="${4:-60s}"

function query() {
    curl -s "$url" \
        -H "$cookie" \
        --compressed | tq "$filter" -t
}

old=$(query)
echo "$old"

while true; do
    if new="$(query)"; then
        if [ "$new" != "$old" ]; then
            notify-send "URL changed content" "$url"
        fi
        sleep $time
    else
        sleep 5s
    fi
done



