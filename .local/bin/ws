#!/usr/bin/env bash

ws=$1
cd

i3-msg "append_layout .config/i3/$ws.json"

if [ $ws = uni ]; then
    cd Documents/TUB
fi

case $ws in
    dsi) ;&
    apic) ;&
    gdst) ;&
    uni)
        [ "$PWD" = "$HOME" ] && cd ~/tubCloud/s21/$ws ;&
    dotfiles)
        gnome-terminal -- tmux new-session -As $ws &
        ;&
    main)
        firefox -no-remote -P $ws &
        ;;
    *)
        exit 1
        ;;
esac
