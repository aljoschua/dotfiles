#!/usr/bin/env bash

ws=$1
cd

i3-msg "append_layout .config/i3/$ws.json"

if [ $ws = uni ]; then
    cd Documents/TUB
fi

if [ $ws = travel ]; then
    cd Documents/travel
    i3-msg "layout stacked"
fi

case $ws in
    travel) ;&
    dsi) ;&
    apic) ;&
    gdst) ;&
    uni)
        [ "$PWD" = "$HOME" ] && cd ~/tubCloud/s21/$ws ;&
    dotfiles)
        gnome-terminal -- tmux new-session -As $ws &
        ;&
    main)
        firefox -P $ws &
        {   sleep 4
            wmctrl -ia $(wmctrl -lp | awk -v pid=$! '$3 == pid {print $1}') &&
            xdotool key --clearmodifiers super+f super+f
        } &
        ;;
    *)
        exit 1
        ;;
esac
