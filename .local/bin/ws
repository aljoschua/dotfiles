#!/usr/bin/env bash

fail() {
    echo "$@" >&2
    exit 1
}

check_args() {
    [ $# != 1 ] && fail "ws requires exactly one argument"
    possible_names="travel dsi thesis uni dotfiles main"
    for name in $possible_names; do
        [ $name = "$1" ] && local match=
    done
    [ -v match ] || fail "ws only accepts '$possible_names'"
}

i3_maybe_append_layout() {
    if [ -r ".config/i3/$WS_NAME.json" ]; then
        i3-msg append_layout ".config/i3/$WS_NAME.json"
    fi
}

bind_ws_name() {
    mkdir -p ~/.cache/ws
    echo "$WS_NAME" > ~/.cache/ws/$(wmctrl -d | awk '/\*/{print $NF}')
}

change_directory() {
    [ -d "tubCloud/w21/$WS_NAME" ] && cd "tubCloud/w21/$WS_NAME"

    [ "$WS_NAME" = dsi ] && cd ~/tubCloudb/w21/dsi

    [ "$WS_NAME" = uni ] && cd Documents/TUB

    [ "$WS_NAME" = travel ] && cd Documents/travel
}

launch_apps() {
    local pre="$WS_HOME/ws-pre.bash" post="$WS_HOME/ws-post.bash"
    [ -r "$pre" ] && source "$pre"

    [ "$WS_NAME" != main ] && launch_tmux
    launch_browser

    [ -r "$post" ] && source "$post"
}

launch_tmux() {
    x-terminal-emulator -- tmux new-session -As "$WS_NAME" &
}

launch_browser() {
    firefox -P "$WS_NAME" &
    {
        sleep 4
        x-terminal-emulator &
        sleep 0.1
        kill $!
    } &
}

main() {
    check_args "$@"

    export WS_NAME="$1"
    cd

    i3_maybe_append_layout

    bind_ws_name

    change_directory
    export WS_HOME="$PWD"

    launch_apps
    exit 0
}
main "$@"
