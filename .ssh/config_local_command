Match Host *.tu-berlin.de,!git.tu-berlin.de
    PermitLocalCommand yes

Match Host Miri-Laptop,fritz.box, User aljoschua
    PermitLocalCommand yes

Host *
    SendEnv LC_REMOTE_USER
    # add 'environment="LC_REMOTE_USER=aljoschua" ssh-rsa...' to authorized_keys if this doesnt work

    LocalCommand ~/.ssh/ssh-copy-rc %r %h %p
    PermitLocalCommand no

Include config
